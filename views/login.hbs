    <div class="textheader"> Welcome to BookChain </div>
        <div class="centered">
            
            <h1>Sign in for access</h1>
            <form action="/auth/login" method="POST">
            <p>
                <input type="email" id="email" placeholder="Your email" name="email" required />
            </p>
            <p>
                <input type="password" id="password" placeholder="Your password" name="password" required />
            </p>
            <p>
                <input class="button" type="submit" id="submit" value="Sign in">
            </p>
            <p>
                <a href="/signup">Click here to sign up</a>
            </p>
            </form>

            {{#if message}}
                <h4>{{message}}</h4>
            {{/if}}

        </div>
